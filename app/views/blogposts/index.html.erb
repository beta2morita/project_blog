    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url('https://dl.dropboxusercontent.com/u/9485125/project_blog/photo-pinwand.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>Manage your Blog</h1>
                                                <hr class="small">
                        <span class="subheading">Edit or add projects to the homepage</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
              <% @blogposts.each do |blogpost| %>
                <div class="post-preview">
                    <%= link_to(blogpost) do %>
                        <h2 class="post-title">
                            <%= blogpost.heading %>
                        </h2>
                        <h3 class="post-subtitle">
                            <%= blogpost.subheading %>
                        </h3>
                <% end %>
                    <p class="post-meta">A project of <a href="#"><%= blogpost.participants %></a>, posted on <%= blogpost.created_at %></p>
                           <%= link_to 'Show', blogpost %>
        <%= link_to 'Edit', edit_blogpost_path(blogpost) %>
       <!-- <%= link_to 'Delete', blogpost, method: :delete, data: { confirm: 'Are you sure?' } %>-->
                </div>
                <hr>
    <% end %>

<br>


                <ul class="pager">
                    <li class="next">
                        <%= link_to 'New Blogpost', new_blogpost_path %>
                </ul>




            </div>
        </div>
    </div>


